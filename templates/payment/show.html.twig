{% extends 'base.html.twig' %}

{% block title %}Платёж{% endblock %}

{% block body %}
    <h1>Платёж</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Дата</th>
                <td>{{ payment.date ? payment.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Сумма</th>
                <td>{{ payment.cost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_index') }}">Вернуться</a>

    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">Вернуться</a>

    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
