{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Товар</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Цена</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">Вернуться</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Редактировать</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
