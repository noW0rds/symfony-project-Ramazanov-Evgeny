{% extends 'base.html.twig' %}

{% block title %}Просмотр личного чека{% endblock %}

{% block body %}
    <h1>Личный чек</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ personal_check.id }}</td>
            </tr>
            <tr>
                <th>В чеке</th>
                <td>{{ personal_check.whoCheck }}</td>
            </tr>
            <tr>
                <th>Гость</th>
                <td>{{ personal_check.guest }}</td>
            </tr>
            <tr>
                <th>Количество</th>
                <td>{{ personal_check.amount }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_personal_check_index') }}">Вернуться</a>

    <a href="{{ path('app_personal_check_edit', {'id': personal_check.id}) }}">Изменить</a>

    {{ include('personal_check/_delete_form.html.twig') }}
{% endblock %}
