{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Пользователь</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Эл. почта</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Роль</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Пароль</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">Вернуться</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Редактировать</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
