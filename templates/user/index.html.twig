{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1><i>Пользователи</i></h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Эл. почта</th>
                <th>Роль</th>
                <th>Пароль</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">открыть</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">редактировать</a>
                    <button><a href="{{ path('app_user_role', {'id': user.id}) }}">изменить роль</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">На данный момент список пользователей пуст.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Создать нового пользователя</a>
{% endblock %}
